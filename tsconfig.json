{
  "compilerOptions": {
    "removeComments": true,
    "target": "ES6",
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ],
  "ts-node": {
    "esm": true,
  }
}
